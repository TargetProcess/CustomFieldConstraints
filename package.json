{
  "name": "CustomFieldConstraints",
  "version": "1.1.1-0",
  "description": "This mashup allows a custom field to be required when an entity is moved to a specific state or a specific value is selected in another custom field.",
  "author": "Aliaksei Shytkin <shitkin@targetprocess.com>",
  "scripts": {
    "start": "outputPath=$TARGETPROCESS_MASHUPS_PATH/$npm_package_name; rm -rf $outputPath && NODE_ENV=development webpack --watch --output-path $outputPath",
    "build:manager": "webpack --output-path build/manager --config webpack-production.config.js",
    "build:library": "rm -rf build/library && webpack --output-path build/library --config webpack-library.config.js && cp docs/README.md build/library/README.mkd && cp docs/*.png build/library",
    "build:all": "npm run build:manager && npm run build:library",
    "lint": "eslint --quiet .",
    "test": "npm run lint && npm run test:coverage",
    "test:coverage": "karma start --single-run --reporters spec,coverage --browsers PhantomJS",
    "test:watch": "karma start --reporters spec,notify --browsers PhantomJS",
    "preversion": "npm test",
    "version": "npm run build:all && git add -A build",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/TargetProcess/CustomFieldConstraints.git"
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "http://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta6",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "chai": "^3.4.0",
    "chai-enzyme": "^0.2.2",
    "classnames": "^2.2.0",
    "combine-assets-plugin": "targetprocess/combine-assets-plugin",
    "css-loader": "^0.14.5",
    "enzyme": "^1.4.1",
    "eslint": "^1.7.3",
    "eslint-plugin-mocha": "^1.0.0",
    "eslint-plugin-react": "^3.6.3",
    "file-loader": "^0.8.4",
    "isparta-loader": "^2.0.0",
    "jquery": "^2.1.4",
    "karma": "^0.13.14",
    "karma-chai": "^0.1.0",
    "karma-chai-plugins": "^0.6.0",
    "karma-chrome-launcher": "^0.2.1",
    "karma-cli": "^0.1.1",
    "karma-coverage": "^0.5.3",
    "karma-mocha": "^0.2.0",
    "karma-mocha-reporter": "^1.1.1",
    "karma-notify-reporter": "^0.1.1",
    "karma-phantomjs-launcher": "^0.2.1",
    "karma-sinon": "^1.0.4",
    "karma-sourcemap-loader": "^0.3.6",
    "karma-spec-reporter": "0.0.21",
    "karma-webpack": "^1.7.0",
    "mocha": "^2.3.3",
    "null-loader": "^0.1.1",
    "phantomjs": "^1.9.18",
    "phantomjs-polyfill": "0.0.1",
    "react": "^0.13.3",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.12.3",
    "targetprocess-mashup-config-loader": "targetprocess/targetprocess-mashup-config-loader",
    "targetprocess-mashup-helper": "^0.3.0",
    "targetprocess-mashup-manifest-loader": "targetprocess/targetprocess-mashup-manifest-loader",
    "targetprocess-mashup-webpack-plugin": "targetprocess/targetprocess-mashup-webpack-plugin",
    "underscore": "^1.8.3",
    "webpack": "^1.9.10"
  },
  "dependencies": {}
}
